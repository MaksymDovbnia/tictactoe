<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".SecondActivity" >

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/line_red" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="313dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/line_yellow" />

    <FrameLayout
        android:layout_width="543dp"
        android:layout_height="825dp"
        android:layout_gravity="center"
        android:background="@drawable/notebook2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_field_item"
                android:layout_width="303dp"
                android:layout_height="49dp"
                android:gravity="center"
                android:text="@string/name_game"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:src="@drawable/tic_tac_toe" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_startmenu"
            android:layout_width="286dp"
            android:layout_height="247dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/Button_startactivity_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_white"
                    android:text="@string/button_startactivitt_startgame"
                    android:textColor="@color/blue"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/Button_startactivity_settings"
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.84"
                    android:background="@drawable/button_white"
                    android:text="@string/button_startactivitt_settings"
                    android:textColor="@color/blue"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/Button_startactivity_exit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_white"
                    android:text="@string/button_startactivitt_exit"
                    android:textColor="@color/blue"
                    android:textSize="50sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="228dp"
        android:layout_height="278dp"
        android:layout_gravity="bottom"
        android:src="@drawable/coffee" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="271dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:src="@drawable/pencil" />

</FrameLayout>