<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp"
              android:layout_gravity="right|bottom"
        >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_all_online_players"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_text_size"
                android:text="@string/all_online_players"
                android:textColor="@color/red"
                />

        <TextView
                android:id="@+id/textView_online_group_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_list"
                android:textSize="@dimen/default_text_size"
                />

    </LinearLayout>

    <ListView
            android:id="@+id/listOnlineGroup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
    </ListView>

    <Button
            android:layout_marginTop="10dp"
            android:id="@+id/b_open_group"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_default_yelow_button"
            android:text="@string/open_group"
            />


</LinearLayout>