<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/general_background"
        >

    <include layout="@layout/top_google_login_view"
             android:layout_height="@dimen/top_google_login_view_height"
             android:layout_width="match_parent"/>


    <!--Fragment container-->
    <FrameLayout
            android:id="@+id/center_for_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:layout_marginTop="@dimen/game_field_container_margin_top"
            android:background="@drawable/fild2"
            android:layout_marginLeft="@dimen/game_field_container_margin_left_right"
            android:layout_marginRight="@dimen/game_field_container_margin_left_right">
    </FrameLayout>

    <Button
            android:id="@+id/btn_back_from_select_type_game"
            android:layout_width="@dimen/type_game_back_btn_size"
            android:layout_height="@dimen/type_game_back_btn_size"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="-40dp"
            android:background=
                    "@drawable/exit_button_selector"/>


    <!--Bottom container-->

</LinearLayout>