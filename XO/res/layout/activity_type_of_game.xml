<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".TypeOfGame" >

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/line_red" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/line_yellow" />

    <FrameLayout
        android:layout_width="296dp"
        android:layout_height="419dp"
        android:layout_gravity="center"
        android:background="@drawable/notebook2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_first_player_name"
                android:layout_width="170dp"
                android:layout_height="27dp"
                android:gravity="center"
                android:text="@string/name_game"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"                 
                />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/tic_tac_toe" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_typeofgamenu"
            android:layout_width="198dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/button_gametypes_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_for_text_view"
                    android:text="@string/button_gametypes_friend"
                    android:textColor="@color/blue"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/button_gametypes_android"
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.84"
                    android:background="@drawable/selector_for_text_view"
                    android:text="@string/button_gametypes_android"
                    android:textColor="@color/blue"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/button_gametypes_online"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_for_text_view"
                    android:text="@string/button_gametypes_online"
                    android:textColor="@color/blue"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/button_gametypes_bluetooth"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.84"
                    android:background="@drawable/selector_for_text_view"
                    android:text="@string/button_gametypes_bluetooth"
                    android:textColor="@color/blue"
                    android:textSize="30sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="422dp"
        android:layout_gravity="right"
        android:src="@drawable/pencil" />

</FrameLayout>