<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background2"
              android:paddingRight="5dp"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingLeft="@dimen/general_top_buttons_layout_margin_left"
            >

        <com.componentwithfont.ButtonWithComicsFont
                android:id="@+id/btn_online_groups"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_big"
                android:text="@string/online_rooms"
                android:textSize="@dimen/general_top_buttons_text_size"
                android:textColor="@color/black"
                />

        <com.componentwithfont.ButtonWithComicsFont
                android:id="@+id/btn_top_100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_big"
                android:layout_marginLeft="@dimen/general_buttons_separate_width"
                android:text="@string/top_100"
                android:textSize="@dimen/general_top_buttons_text_size"
                android:textColor="@color/black"
                />


    </LinearLayout>

    <FrameLayout
            android:id="@+id/center_for_fragment"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:baselineAligned="false"
            android:background="@drawable/notebook5"
            android:paddingLeft="@dimen/opened_activity_layout_fragment_container_padding_left"
            >

    </FrameLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">


    </LinearLayout>


</LinearLayout>