<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/anonlogin"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/dialog_view">

    <LinearLayout
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

        <com.componentwithfont.TextViewWithComicsFont
                android:id="@+id/textView_anondailog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_nick"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue"
                android:textSize="@dimen/default_text_size"/>

        <com.componentwithfont.EditTextWithComicsFont
                android:id="@+id/edt_player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"

                android:shadowColor="@color/red"
                android:textColor="@color/blue"
                android:textColorHint="@color/black"
                android:textColorLink="@color/red"
                android:textSize="@dimen/default_text_size"/>


        <com.componentwithfont.ButtonWithComicsFont
                android:id="@+id/btn_anonymous_login"
                android:layout_width="@dimen/popup_button_width"
                android:layout_height="@dimen/popup_button_height"
                android:textSize="@dimen/default_text_size"
                android:layout_gravity="center"
                android:background="@drawable/selector_default_yelow_button"
                android:text="@string/login"
                android:textColor="@color/red"/>

    </LinearLayout>

</FrameLayout>