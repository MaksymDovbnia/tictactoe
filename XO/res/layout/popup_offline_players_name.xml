<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_view"
        >

    <com.componentwithfont.TextViewWirhComicsFont
            android:id="@+id/tw_input_first_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/the_first_player_name"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/blue"
            />

    <com.componentwithfont.EditTextWithComicsFont
            android:id="@+id/edt_first_player_name"
            android:layout_below="@+id/tw_input_first_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/player_1"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/blue"
            />

    <com.componentwithfont.TextViewWirhComicsFont
            android:paddingTop="10dp"
            android:id="@+id/tw_input_second_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_second_player_name"
            android:layout_below="@+id/edt_first_player_name"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/blue"
            />

    <com.componentwithfont.EditTextWithComicsFont
            android:paddingTop="5dp"
            android:id="@+id/edt_second_player_name"
            android:layout_below="@+id/tw_input_second_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/player_2"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            />

    <com.componentwithfont.ButtonWithComicsFont
            android:id="@+id/btn_start_offline_game"
            android:text="@string/start_game"
            android:layout_width="@dimen/popup_button_width"
            android:layout_height="@dimen/popup_button_height"
            android:textSize="@dimen/default_text_size"
            android:layout_below="@+id/edt_second_player_name"
            android:background="@drawable/selector_default_yelow_button"
            android:textColor="@color/red"
            android:layout_centerHorizontal="true"
            />


</RelativeLayout>