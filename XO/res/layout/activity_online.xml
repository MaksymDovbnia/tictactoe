<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".OnlinePlayersActivity" >

    <FrameLayout
        android:layout_width="306dp"
        android:layout_height="494dp"
        android:layout_gravity="center"
        android:background="@drawable/notebook4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_gravity="top"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="277dp"
            android:layout_height="440dp"
            android:layout_gravity="center" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <ListView
                    android:id="@+id/listViewActivityPlayers"
                    android:layout_width="match_parent"
                    android:layout_height="356dp"
                    android:layout_gravity="center"
                    android:background="@drawable/list1" >

                </ListView>

                <TextView
                    android:id="@+id/textViewFirstPlayer"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/texfield_onlineactiv_activityplayers"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/blue"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_gravity="bottom" >

                    <Button
                        android:id="@+id/button_sentdesire"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_yelow"
                        android:text="@string/button_activityplayerlist_desireplay" />

                    <Button
                        android:id="@+id/button_update_activitylist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_yelow"
                        android:text="@string/button_activityplayerlist_updatelsit" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textViewSecondPlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="@string/texfield_onlineactiv_wantedbattle"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/blue"
                            android:textSize="15sp" />

                        <ListView
                            android:id="@+id/ListPlayerWicthWantToPpaly"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/list1" >

                        </ListView>

                        <Button
                            android:id="@+id/button_startGame"
                            android:layout_width="97dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_yelow"
                            android:text="@string/button_activityplayerlist_startgame" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="@string/texfield_onlineactiv_desire"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/blue"
                            android:textSize="15sp" />

                        <ListView
                            android:id="@+id/ListDiserPayer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/list1" >

                        </ListView>

                        <Button
                            android:id="@+id/ButtonCancelPlayer"
                            android:layout_width="92dp"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_yelow"
                            android:text="@string/button_activityplayerlist_caclecplayer" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>