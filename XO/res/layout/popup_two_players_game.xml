<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/general_margin"
                android:paddingRight="@dimen/general_margin"
                android:paddingBottom="@dimen/general_margin"
        >

    <com.componentwithfont.TextViewWithComicsFont
            android:id="@+id/tw_input_first_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:text="@string/the_first_player_name"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/red_dialog"
            />

    <com.componentwithfont.EditTextWithComicsFont
            android:id="@+id/edt_first_player_name"
            android:layout_below="@+id/tw_input_first_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/player_1"
            android:paddingTop="5dp"

            android:textSize="@dimen/default_text_size"
            android:textColor="@color/green_dialog"
            />

    <com.componentwithfont.TextViewWithComicsFont
            android:paddingTop="10dp"
            android:id="@+id/tw_input_second_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_second_player_name"
            android:layout_below="@+id/edt_first_player_name"

            android:textSize="@dimen/default_text_size"
            android:textColor="@color/red_dialog"
            />

    <com.componentwithfont.EditTextWithComicsFont
            android:paddingTop="5dp"
            android:id="@+id/edt_second_player_name"
            android:layout_below="@+id/tw_input_second_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/player_2"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/green_dialog"

            />



</RelativeLayout>