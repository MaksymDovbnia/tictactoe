<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/general_background"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"

            android:background="@drawable/notebook2"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/bluetooth_activity_layout_center_container_padding_left"

            >

        <ImageView
                android:id="@+id/imv_start_activity_xo_image"
                android:layout_width="@dimen/start_activity_layout_center_container_xo_image_width"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/bluetooth_image"

                />


        <LinearLayout
                android:id="@+id/ll_start_game_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/start_activity_layout_center_container_margin_top"
                >

            <View
                    android:layout_width="@dimen/default_red_split_line_width"
                    android:layout_height="@dimen/default_red_split_line_height"
                    android:background="@drawable/split_line"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                <com.componentwithfont.TextViewWithFontMainActivity
                        android:id="@+id/tv_create_bt_game"
                        android:text="@string/create_bluetooth_game"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_view_main_activity"
                        android:textSize="@dimen/bluetooth_activity_default_text_size"
                        />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                <com.componentwithfont.TextViewWithFontMainActivity
                        android:id="@+id/tv_connect_bt_game"
                        android:text="@string/connect_to_bluetooth_game"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        style="@style/text_view_main_activity"
                        android:textSize="@dimen/bluetooth_activity_default_text_size"
                        />
            </LinearLayout>



            <View
                    android:layout_width="@dimen/default_red_split_line_width"
                    android:layout_height="@dimen/default_red_split_line_height"
                    android:background="@drawable/split_line"
                    android:layout_marginTop="@dimen/main_activity_layout_center_container_one_item__margin_top"
                    />


        </LinearLayout>

        <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.7"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            />


</LinearLayout>