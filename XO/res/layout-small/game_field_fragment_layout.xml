<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

        <TextView
                android:id="@+id/tv_field_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Player 1"
                 android:textSize="@dimen/default_text_size"
                android:textColor="@color/blue" />

        <TextView
                android:id="@+id/tv_second_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Player 2"
                android:textSize="@dimen/default_text_size"
                android:textColor="@color/blue" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

        <TextView
                android:id="@+id/tv_score_player_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/big_text_size"
                android:textColor="@color/red" />

        <TextView
                android:id="@+id/tv_score_player_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/big_text_size"
                android:textColor="@color/red" />

    </LinearLayout>

  <!-- Game field block  -->
<LinearLayout
        android:layout_width="@dimen/game_field_fragment_game_field_layout_size"
        android:layout_height="@dimen/game_field_fragment_game_field_layout_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/game_field_fragment_game_field_layout_margin_top"
        android:background="@drawable/frame_for_fame_field"
        >
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            >
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

            <HorizontalScrollView
                    android:layout_width="@dimen/game_field_fragment_game_field_horizontal_scroll_size"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                   >
                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                    <GridView
                            android:id="@+id/grid_view_game_field"
                            android:layout_width="@dimen/game_field_fragment_game_field_grid_view_size"
                            android:layout_height="@dimen/game_field_fragment_game_field_grid_view_size"
                            android:numColumns="15"

                             >
                    </GridView>

                </FrameLayout>
            </HorizontalScrollView>
        </FrameLayout>
    </ScrollView>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
        <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="4dp"
                android:text="60"
                android:layout_toLeftOf="@+id/tv_sec"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/red" />
        <TextView
                android:id="@+id/tv_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/sec"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/red" />


    </RelativeLayout>



</LinearLayout>