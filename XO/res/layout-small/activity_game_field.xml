<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".GameFieldActivity" >

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/clip_red" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/line_yellow" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/notebook4" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="278dp"
            android:layout_height="278dp"
            android:layout_gravity="center" >

            <FrameLayout
                android:id="@+id/FrameLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="284dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fadingEdge="vertical|horizontal"
                    android:fillViewport="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:scrollbarAlwaysDrawVerticalTrack="false"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="horizontal|vertical" >

                    <FrameLayout
                        android:id="@+id/FrameLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <GridView
                            android:id="@+id/gridView1"
                            android:layout_width="600dp"
                            android:layout_height="600dp"
                            android:columnWidth="5dp"
                            android:fadingEdge="vertical"
                            android:numColumns="15"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:scrollbars="vertical" >
                        </GridView>

                    </FrameLayout>
                </HorizontalScrollView>
            </FrameLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_gravity="bottom" >

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_gravity="top" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_gamefield_newgame"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:background="@drawable/red_leftbutton"
                android:text="@string/button_gamefieldactivity_newgame"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_gamefield_menu"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/red_centerbutton"
                android:text="@string/button_gamefieldactivity_menu" />

            <Button
                android:id="@+id/anonlogin"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/red_rightbutton" />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>