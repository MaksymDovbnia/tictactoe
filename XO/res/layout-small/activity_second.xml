<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".SecondActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:layout_gravity="center"
        android:background="@drawable/notebook2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewFirstPlayer"
                android:layout_width="170dp"
                android:layout_height="27dp"
                android:gravity="center"
                android:text="@string/name_game"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tic_tac_toe" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/Button_startactivity_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_white"
                    android:text="@string/button_startactivitt_startgame"
                    android:textColor="@color/blue"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/Button_startactivity_settings"
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.84"
                    android:background="@drawable/button_white"
                    android:text="@string/button_startactivitt_settings"
                    android:textColor="@color/blue"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/Button_startactivity_exit"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.84"
                    android:background="@drawable/button_white"
                    android:text="@string/button_startactivitt_exit"
                    android:textColor="@color/blue"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="129dp"
        android:layout_height="132dp"
        android:layout_gravity="bottom"
        android:src="@drawable/coffee" />

</FrameLayout>