<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>


    </style>

    <style name="xo_popup">
        <item name="android:background">@drawable/dialog_view</item>
    </style>


    <style name="default_padding_for_main">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>

    </style>

    <style name="list_view_header_item">
        <item name="android:textColor">@color/green_dialog</item>
        <item name="android:textSize">@dimen/header_list_item_text_size</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="list_view_item">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/general_list_item_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="game_type_text_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/type_game_text_size</item>
        <item name="android:layout_marginLeft">@dimen/type_game_text_margin_left</item>
        <item name="android:textColor">@color/type_game_text_color</item>
        <item name="android:duplicateParentState">true</item>

    </style>


</resources>