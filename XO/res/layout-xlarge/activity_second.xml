<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".SecondActivity" >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="509dp"
        android:layout_gravity="bottom"
        android:src="@drawable/line_yellow" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="596dp"
        android:layout_height="977dp"
        android:layout_gravity="bottom"
        android:src="@drawable/line_red" />

    <FrameLayout
        android:layout_width="700dp"
        android:layout_height="1116dp"
        android:layout_gravity="center"
        android:background="@drawable/notebook2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="349dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewFirstPlayer"
                android:layout_width="397dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/name_game"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="50sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:src="@drawable/tic_tac_toe" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="261dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/Button_startactivity_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white"
                    android:text="@string/button_startactivitt_startgame"
                    android:textColor="@color/blue"
                    android:textSize="60sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                        android:id="@+id/button_startactivity_settings"
                        android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.84"
                    android:background="@drawable/button_white"
                    android:text="@string/button_startactivitt_settings"
                    android:textColor="@color/blue"
                    android:textSize="60sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_yellow" />

                <Button
                    android:id="@+id/Button_startactivity_exit"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.84"
                    android:background="@drawable/button_white"
                    android:text="@string/button_startactivitt_exit"
                    android:textColor="@color/blue"
                    android:textSize="60sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        android:src="@drawable/coffee" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="347dp"
        android:layout_height="1132dp"
        android:layout_gravity="right"
        android:src="@drawable/pencil" />

</FrameLayout>