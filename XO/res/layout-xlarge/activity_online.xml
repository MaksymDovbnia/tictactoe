<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".OnlinePlayersActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/notebook4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="top"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="733dp"
            android:layout_height="1100dp"
            android:layout_gravity="center" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <ListView
                    android:id="@+id/list_activity_players"
                    android:layout_width="match_parent"
                    android:layout_height="933dp"
                    android:layout_gravity="center"
                    android:background="@drawable/list1" >

                </ListView>

                <TextView
                    android:id="@+id/textViewFirstPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/online_players"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/blue"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" >

                    <Button
                        android:id="@+id/btn_invite_to_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_yelow"
                        android:text="@string/invite_for_play" />

                    <Button
                        android:id="@+id/button_update_activitylist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_yelow"
                        android:text="@string/update_list" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textViewSecondPlayer"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="@string/wanted_battle"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/blue"
                            android:textSize="30sp" />

                        <ListView
                            android:id="@+id/list_player_witch_want_to_play"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/list1" >

                        </ListView>

                        <Button
                            android:id="@+id/btn_start_game"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/button_yelow"
                            android:text="@string/start_game" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="@string/invited_players"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/blue"
                            android:textSize="30sp" />

                        <ListView
                            android:id="@+id/list_disered_players"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/list1" >

                        </ListView>

                        <Button
                            android:id="@+id/btn_cancel_player"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/button_yelow"
                            android:text="@string/cancel_player" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>